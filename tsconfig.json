{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**/*.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}